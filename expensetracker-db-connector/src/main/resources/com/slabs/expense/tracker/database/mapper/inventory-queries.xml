<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slabs.expense.tracker.common.database.mapper.InventoryDAO">

	<insert id="createInventory" parameterType="java.util.List">
		insert into EXPENSETRACKER.INVENTORY(ITEMNAME, CATEGORY, QTY, UNIT, USERNAME) values
		<foreach collection="list" item="record" index="index" open="(" separator="),(" close=")">
			#{record.itemName},
			#{record.category},
			#{record.qty},
			#{record.unit},
			#{record.username}
		</foreach>
	</insert>

	<update id="updateInventory">
		update EXPENSETRACKER.INVENTORY
		<set>
			<if test="itemName != null">
				itemName = #{itemName},
			</if>
			<if test="category != null">
				category=#{category},
			</if>
			<if test="qty != null">
				qty=#{qty},
			</if>
		</set>
		where id=#{id}
	</update>

	<select id="getInventory" resultType="com.slabs.expense.tracker.common.database.entity.Inventory">
		select * from EXPENSETRACKER.INVENTORY where
		username=#{param1}
	</select>

	<delete id="deleteInventory">
		delete from EXPENSETRACKER.INVENTORY
		where id=#{id}
	</delete>

</mapper>